<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @user, local: true) do |form| %>
  <%= form.hidden_field :name %>
  <%= form.hidden_field :email %>
  <%= form.hidden_field :password %>
  <%= form.hidden_field :password_confirmation %>

  <p>名前:<%= @user.name %></p>
  <p>email:<%= @user.email %></p>
  <%= form.submit  "登録する" %>
<% end %>