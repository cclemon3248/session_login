<h1>ブログ一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>名前</th>
    <th>email</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to '詳細を確認する', user_path(user.id) %></td>
    <td><%= link_to "ブログを編集する", edit_user_path(user.id) %></td>
    <td><%= link_to 'ブログを削除する', user_path(user.id), method: :delete %></td>
  </tr>
<% end %>
</table>
<%= link_to '新しくブログを投稿する', new_user_path %>